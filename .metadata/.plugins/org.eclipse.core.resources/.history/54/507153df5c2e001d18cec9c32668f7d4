
public class demoSinhVien {

	public static void main(String[] args) {
		
		SinhVien sv1 = new SinhVien();
		SinhVien sv2 = new SinhVien();
		
		sv1.hoTen="Demi";
		sv1.email="demi@gmail.com";
		
		sv2.hoTen="Lou";
		sv2.email="Lou@gmail.com";
		
		//hoặc gọi constructor có tham số bên SinhVien()
		SinhVien sv3 = new SinhVien("Beo","Beo@gmail.com");
		
		System.out.println(">Tên: "+sv1.hoTen+ "\nEmail:"+sv1.email);
		System.out.println(">Tên: "+sv2.hoTen+ "\nEmail:"+sv2.email);
		System.out.println(">Tên: "+sv3.hoTen+ "\nEmail:"+sv3.email);

	}

}
