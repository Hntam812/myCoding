		Scanner sc = new Scanner(System.in);
		
		System.out.println("Vui lòng nhập tên sinh viên: ");
		String ten = sc.nextLine();
		System.out.println("Vui lòng nhập email sinh viên: ");
		String email = sc.nextLine();
		
		System.out.println("Vui lòng nhập điểm toán: ");
		float toan = Float.parseFloat(sc.next());
		
		System.out.println("Vui lòng nhập điểm lý: ");
		float ly = Float.parseFloat(sc.next());
		
		System.out.println("Vui lòng nhập điểm hóa: ");
		float hoa = Float.parseFloat(sc.next());
		
		SinhVien sv1 = new SinhVien();
		
		sv1.setHoTen(ten);
		sv1.setEmail(email);
		sv1.setToan(toan);
		sv1.setLy(ly);
		sv1.setHoa(hoa);
		sv1.tinhDiemTB();
		
		System.out.println(">Tên: "+sv1.getHoTen()+"\nEmail:"+sv1.getEmail()+"\nĐiểm Trung bình:"+sv1.getDiemTB());
		
		
		
		

