/**
 * Mục đích : Xử lý nghiệp vụ liên quan đến Sinh Viên
 * @author Demi
 *Ngày tạo  : 
 *Version : 1.0
 */
public class SinhVien {
	
	private String hoTen;
	private String email;
	
	private float toan;
	private float ly;
	private float hoa;
	
	private float diemTB; //chỉ có get mà không có set : không cho phép nhập từ bên ngoài
	
//	//Phương thức khởi tạo mặc định không tham số: 
//	public SinhVien() {}
//	
//	//Phương thức khởi tạo sử dụng hai tham số để truyền dữ liệu cho thuộc tính 
//	public SinhVien(String hoTen, String email) {
//		this.hoTen=hoTen;
//		this.email=email;
//	}
    
	//getter và setter
	public String getHoTen() {
		return hoTen;
	}

	public void setHoTen(String hoTen) {
		this.hoTen = hoTen;
	}

	public String getEmail() {
		return email;
	}

	public void setEmail(String email) {
		this.email = email;
	}
	
	//Phương thức tính điểm trung bình 
	public void tinhDiemTB() {
		this.diemTB=(this.toan+this.ly+this.hoa)/3;
	}

	public float getToan() {
		return toan;
	}

	public void setToan(float toan) {
		this.toan = toan;
	}

	public float getLy() {
		return ly;
	}

	public void setLy(float ly) {
		this.ly = ly;
	}

	public float getHoa() {
		return hoa;
	}

	public void setHoa(float hoa) {
		this.hoa = hoa;
	}

	public float getDiemTB() {
		return diemTB;
	}
	
	
	
	//Đặt câu hỏi : thuộc tính có cho bên ngoài truyền vào hay không
	
	
	
}
